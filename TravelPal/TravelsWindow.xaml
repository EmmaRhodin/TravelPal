<Window x:Class="TravelPal.TravelsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelPal"
        mc:Ignorable="d"
        Title="TravelsWindow" Height="450" Width="800" Background="MintCream" ResizeMode="NoResize">
    <Grid>

        <!-- Valde att använda pages istället för att öppna
             och stäng fönster om och om igen -->
        <StackPanel Orientation="Horizontal" Height="40" VerticalAlignment="Top" HorizontalAlignment="Stretch">
            <Button 
                Content="Log Out"
                Background="White"
                Foreground="MediumSlateBlue"
                BorderBrush="MediumSlateBlue"
                BorderThickness="2"
                FontWeight="Bold"
                FontSize="18"
                MinWidth="100"
                Margin="10,0,0,0"
                Click="Button_Click_LogOut"/>
            <Button
                Content="Travels"
                Background="White"
                Foreground="MediumSlateBlue"
                BorderBrush="MediumSlateBlue"
                BorderThickness="2"
                FontWeight="Bold"
                FontSize="18"
                MinWidth="125"
                Margin="280, 0, 0, 0"
                Click="Button_Click_Travels"/>
            <Button
                Content="Add Travels"
                Background="White"
                Foreground="MediumSlateBlue"
                BorderBrush="MediumSlateBlue"
                BorderThickness="2"
                FontWeight="Bold"
                FontSize="18"
                MinWidth="125"
                Margin="5,0,5,0"
                Click="Button_Click_AddTravels"/>
            <Button
                Content="Travel Details"
                Background="White"
                Foreground="MediumSlateBlue"
                BorderBrush="MediumSlateBlue"
                BorderThickness="2"
                FontWeight="Bold"
                FontSize="18"
                MinWidth="125"
                Click="Button_Click_TravelDetails"/>
        </StackPanel>
        <Frame x:Name="TravelsWindowMain" Margin="10,40,10,10" NavigationUIVisibility="Hidden"/>

        <TextBlock
            Name="userNameHere"
            Text="User: "
            Foreground="MediumSlateBlue"
            Margin="120,10,450,0"
            VerticalAlignment="Top"
            FontWeight="Bold"
            FontSize="18"/>
    </Grid>
</Window>
