<Window x:Class="TravelPal.TravelsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelPal"
        mc:Ignorable="d"
        Title="TravelsWindow" Height="450" Width="800">
    <Grid>

        
        <!-- Valde att använda pages istället för att öppna
             och stäng fönster om och om igen -->
        <StackPanel Orientation="Horizontal" Height="40" VerticalAlignment="Top" HorizontalAlignment="Stretch">
            <Button
                Content="Travels"
                FontSize="18"
                MinWidth="125"
                Margin="410, 0, 0, 0"
                Click="Button_Click_Travels"/>
            <Button
                Content="Add Travels"
                FontSize="18"
                MinWidth="125"
                Margin="5,0,5,0"
                Click="Button_Click_AddTravels"/>
            <Button
                Content="Travel Details"
                FontSize="18"
                MinWidth="125"
                Click="Button_Click_TravelDetails"/>
        </StackPanel>
        <Frame x:Name="TravelsWindowMain" Margin="0,40,0,0" NavigationUIVisibility="Hidden"/>

        <TextBlock
            Text="User: "
            Margin="20,10,400,0"
            VerticalAlignment="Top"
            FontWeight="Bold"
            FontSize="18"/>
    </Grid>
</Window>
